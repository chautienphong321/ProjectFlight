@model IEnumerable<Project_LMS.Models.Danh_sách_giáo_viên>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách giảng viên</h2>

<p>
    @Html.ActionLink("Thêm giảng viên mới", "Create")
</p>

@using (Html.BeginForm("Index", "Danh_sách_giáo_viên", FormMethod.Post))
{
    <div class="form-group form-inline">
        <input type="text" name="SearchString" placeholder="Nhập tên giáo viên" class="form-control" />
        @Html.DropDownList("Searchtobomon", (IEnumerable<SelectListItem>)
                (new[] {
                 new SelectListItem() { Text = "Khoa học máy tính" },
                 new SelectListItem() { Text = "Toán - Tin" },
                 new SelectListItem() { Text = "Kinh tế - Chính trị" },
                }), "Chọn Tổ bộ môn", new { @class = "form-control" })

        @Html.DropDownList("Searchloaihopdong", (IEnumerable<SelectListItem>
                     )(new[] {
                     new SelectListItem() { Text = "Hợp đồng thử việc" },
                     new SelectListItem() { Text = "Biên chế" },
                }), "Chọn loại hợp đồng", new { @class = "form-control" })


        @Html.DropDownList("Searchtrangthai", (IEnumerable<SelectListItem>
                    )(new[] {
                  new SelectListItem() { Text = "Sắp giảng dạy" },
                  new SelectListItem() { Text = "Đang giảng dạy" },
                  new SelectListItem() { Text = "Ngừng giảng dạy" },
                    }), "Chọn trạng thái", new { @class = "form-control" })
        
        <input type="submit" class="btn btn-default" value="Tìm kiếm" />
        <a class="btn btn-default" href="~/Danh_sách_giáo_viên/index">Tất cả giáo viên</a>
    </div>
}

<table class="table">
    <tr>
        <th>
            Mã giảng viên
        </th>
        <th>
            Họ và tên
        </th>
        <th>
            Mã ngạch
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Tổ bộ môn
        </th>
        <th>
            Loại hợp đồng
        </th>
        <th>
            Ngày vào trường
        </th>
        <th>
            Nghỉ phép
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Magiangvien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hovaten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mangach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chucvu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tobomon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loaihopdong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngayvaotruong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nghiphep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Magiangvien }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Magiangvien }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Magiangvien })
            </td>
        </tr>
    }

</table>
